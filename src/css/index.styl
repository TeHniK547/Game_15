body,
html {
    font: 16px/1.4 Georgia, serif;
}

@media only screen and (max-width: 500px) {
    body,
    html {
        font-size: 14px;
    }
}

.page {
    max-width: 500px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-selct: none;
}

h1 {
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen {
    width: 100%;
    padding-bottom: 100%;
    background: #500d69d4;
    margin-bottom: 1.5rem;
    position: relative;

    .item {
        outline: none;
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        margin: 0;
        padding: 0;
        border: 4px 4px;
        border-radius: 5px;
        background: #000;
        color: white;
        font-size: 4rem;
        cursor: pointer;
        box-shadow: inset 1px 1px #e5d6f6;
        transition: transform 0.2s, filter 0.5s;

        $Val {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 6px #922ec5;
        }
    }

    &Win {
        .item {
            filter: brightness(200%);
            background: green;
        }
    }
}

.button {
    color: #fff;
    background: #000;
    font: 1.2rem/1.4 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: 0.5em 1.5em;
    border-radius: 5px;

    &:hover {
        background: #922ec5;
    }
}